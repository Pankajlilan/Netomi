<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ig_background</item>
        <item name="colorPrimaryVariant">@color/ig_surface</item>
        <item name="colorOnPrimary">@color/ig_text_primary</item>
        <item name="colorSecondary">@color/ig_blue</item>
        <item name="colorSecondaryVariant">@color/ig_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/ig_background</item>
        <item name="colorOnBackground">@color/ig_text_primary</item>
        <item name="colorSurface">@color/ig_surface</item>
        <item name="colorOnSurface">@color/ig_text_primary</item>
        <item name="android:statusBarColor">@color/ig_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/ig_background</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- Instagram-style Toolbar Title -->
    <style name="InstagramToolbarTitle" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/ig_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Instagram-style Button -->
    <style name="InstagramButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/ig_blue</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">44dp</item>
    </style>

    <!-- Instagram-style Text Button -->
    <style name="InstagramTextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/ig_blue</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Instagram-style Card -->
    <style name="InstagramCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/ig_background</item>
        <item name="strokeColor">@color/ig_border</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Instagram-style EditText -->
    <style name="InstagramEditText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/ig_border</item>
        <item name="hintTextColor">@color/ig_text_secondary</item>
        <item name="android:textColor">@color/ig_text_primary</item>
        <item name="android:textColorHint">@color/ig_text_secondary</item>
    </style>

    <!-- Instagram-style App Title -->
    <style name="AppTitleStyle" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/ig_text_primary</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <!-- Instagram-style App Subtitle -->
    <style name="AppSubtitleStyle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/ig_text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <!-- Instagram-style Chat Item -->
    <style name="ChatItemStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/ig_background</item>
        <item name="rippleColor">@color/ig_surface</item>
    </style>

</resources>
